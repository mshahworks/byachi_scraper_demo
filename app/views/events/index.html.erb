<div class="page-header">Listing events</div>

<div class="row">
  <div class="col-xs-12 col-md-12 col-lg-12">
    <%#= link_to "Fetch Past Events", past_events_events_path, class: "btn btn-primary pull-right", style: 'margin-left: 5px;' %>
    <%= link_to "Fetch Future Events", future_events_events_path, class: "btn btn-primary pull-right" %><br/><br/>
  </div>
</div>

<div class="table-responsive">
  <table class='table table-striped table-bordered'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Location</th>
        <th>Event Type</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.event_name %></td>
          <td><%= event.event_start_date.strftime("%B %d, %Y") if event.event_start_date.present? %></td>
          <td><%= event.event_end_date.strftime("%B %d, %Y") if event.event_end_date.present? %></td>
          <td><%= event.event_location %></td>
          <td><%= event.event_type.try(:uppercase) %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<%= paginate @events %>